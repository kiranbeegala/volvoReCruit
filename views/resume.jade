      function checkvalues(check){
        //- console.log(check);
        var myud = !{JSON.stringify(ud)};
        //- console.log(typeof(myud[check]));
        var testdata = parseFloat(myud[check])
        if( testdata > 4){
          changebgcolortogreen("#"+check);
        }else if( testdata > 2.5){
            changebgcolortoblue("#"+check);
        }else{
            changebgcolortored("#"+check);
        }
        }
        function checklang(check){
          var myud = !{JSON.stringify(ud)};
          //- console.log(typeof(myud[check]));
          var testdata = myud[check];
          console.log("s" + testdata);
          if(testdata == 'Native'){
            $("#"+check).toggleClass('badge bg-green');
          }
          if(testdata == 'Expert'){
            $("#"+check).toggleClass('badge bg-light-blue');
          }
          if(testdata == 'Intermediate'){
            $("#"+check).toggleClass('badge bg-yello');
          }
          if(testdata == 'Beginner'){
            $("#"+check).toggleClass('badge bg-red');
          }                              
        }
